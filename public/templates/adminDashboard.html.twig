<!-- Modal Editar -->
<div class="modal fade" id="modalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar l'àrbre: "common name"</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        SELECT sp.id AS specie_id, sp.common_name, g.name AS genre_name, a.name AS attribute_name FROM specie sp INNER JOIN genre g ON sp.id_genre = g.id LEFT JOIN specie_attribute sa ON sp.id = sa.specie_id LEFT JOIN attribute a ON sa.attribute_id = a.id; 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success">Aplicar</button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel·lar</button>
