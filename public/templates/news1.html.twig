                            'rgba(121, 85, 72, 0.6)',   // Marrón terroso (Tipuana)
                            'rgba(180, 130, 20, 0.6)',  // Ocre dorado (Palmera)
                            'rgba(205, 190, 145, 0.6)'  // Beige suave (Altres)
